    show_title "ç³»ç»Ÿå¿«ç…§å¤‡ä»½å·¥å…·å®‰è£…å‘å¯¼"
    check_requirements
    collect_config
    setup_ssh_key
    test_telegram
    create_script
    if [[ "$RUN_NOW" =~ ^[Yy]$ ]]; then
        log "${YELLOW}æ­£åœ¨æ‰§è¡Œé¦–æ¬¡æµ‹è¯•è¿è¡Œ...${NC}"
        bash "$SCRIPT_FILE"
    fi
    show_title "å®‰è£…å®Œæˆ"
    log "${GREEN}âœ“ ç³»ç»Ÿå¿«ç…§å¤‡ä»½å·¥å…·å®‰è£…æˆåŠŸï¼${NC}\n"
    log "${CYAN}é…ç½®æ–‡ä»¶ä½ç½®:${NC} $CONFIG_FILE"
    log "${CYAN}ä¸»è„šæœ¬ä½ç½®:${NC} $SCRIPT_FILE\n"
    log "${YELLOW}ç®¡ç†å®šæ—¶ä»»åŠ¡: ${NC}"
    log "  - æŸ¥çœ‹çŠ¶æ€: ${CYAN}systemctl status system-snapshot.timer${NC}"
    log "  - ç«‹å³è¿è¡Œ: ${CYAN}systemctl start system-snapshot.service${NC}"
    log "  - åœæ­¢/ç¦ç”¨: ${CYAN}systemctl disable system-snapshot.timer${NC}\n"
}

