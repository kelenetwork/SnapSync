#!/bin/bash

# ç²¾ç®€å¢å¼ºç‰ˆäº¤äº’å¼ç³»ç»Ÿå¿«ç…§å¤‡ä»½å·¥å…·å®‰è£…è„šæœ¬
# ç‰ˆæœ¬: v2.4-ultimate
# æ›´æ–°ç‚¹ï¼š
# - ç»Ÿä¸€ SSH_OPTS/å¼ºåˆ¶å…¬é’¥ï¼›Dropbear å…¼å®¹
# - è¿œç«¯è·¯å¾„è‡ªåŠ¨é€‰æ‹©ï¼ˆä¼˜å…ˆ /mnt/wd/Remote_backupï¼‰
# - BusyBox å…¼å®¹æ¸…ç†ï¼ˆ-exec rm -fï¼‰
# - rsyncâ†’scp è‡ªåŠ¨å›é€€
# - è¿œç«¯ç©ºé—´æ£€æŸ¥ï¼ˆå¿«ç…§å¤§å°+200MBä½™é‡ï¼‰
# - ä¸Šä¼ ç»Ÿè®¡ï¼ˆå¤§å°/è€—æ—¶/å¹³å‡é€Ÿåº¦/ä¸Šä¼ åå¯ç”¨ï¼‰
# - Telegram é˜¶æ®µé€šçŸ¥ï¼›ä¿®å¤ \n æ¢è¡Œæ˜¾ç¤º

# ====================================================================
# ## USER CONFIGURATION ##
# ====================================================================

# --- Telegram é…ç½® ---
BOT_TOKEN=""
CHAT_ID=""

# --- è¿œç¨‹ SSH æœåŠ¡å™¨é…ç½® ---
TARGET_IP=""
TARGET_USER="root"
SSH_PORT=""                 # ä¾‹: 22 æˆ– 2288ï¼ˆfrp æ˜ å°„ï¼‰
TARGET_BASE_DIR="/mnt/wd/Remote_backup"  # ä¾‹: /root/Remote_backup
REMOTE_DIR_NAME=""

# --- æœ¬åœ°é…ç½® ---
BACKUP_DIR="/backups"

# --- å¤‡ä»½ä¿ç•™ç­–ç•¥ ---
LOCAL_SNAPSHOT_KEEP="2"
REMOTE_SNAPSHOT_DAYS="15"

# --- è‡ªåŠ¨åŒ–é…ç½® ---
BACKUP_INTERVAL_DAYS="5"
RUN_NOW="Y"

# --- æ–°å¢é…ç½® ---
DISK_SPACE_THRESHOLD="85"           # ç£ç›˜ä½¿ç”¨ç‡é˜ˆå€¼(%)
MAX_RETRY_ATTEMPTS="3"              # ç½‘ç»œæ“ä½œæœ€å¤§é‡è¯•æ¬¡æ•°
LOAD_THRESHOLD_MULTIPLIER="1.0"     # è´Ÿè½½é˜ˆå€¼å€æ•°(åŸºäºCPUæ ¸å¿ƒæ•°)
MEMORY_THRESHOLD="80"               # å†…å­˜ä½¿ç”¨ç‡é˜ˆå€¼(%)

# ====================================================================
# è„šæœ¬æ ¸å¿ƒä»£ç 
# ====================================================================

# é¢œè‰²
RED='\033[0;31m'; GREEN='\033[0;32m'; YELLOW='\033[0;33m'
BLUE='\033[0;34m'; CYAN='\033[0;36m'; NC='\033[0m'

# è·¯å¾„
CONFIG_DIR="/etc/system_snapshot"
CONFIG_FILE="$CONFIG_DIR/config.conf"
SCRIPT_DIR="/usr/local/sbin"
SCRIPT_FILE="$SCRIPT_DIR/system_snapshot.sh"
LOG_DIR="/var/log/system_snapshot"
INSTALL_LOG_FILE="$LOG_DIR/install.log"
SNAPSHOT_LOG_FILE="$LOG_DIR/snapshot.log"
DEBUG_LOG_FILE="$LOG_DIR/debug.log"

# ç»Ÿä¸€ SSH è¿æ¥å‚æ•°
SSH_KEY="/root/.ssh/id_ed25519"
SSH_OPTS='-o IdentitiesOnly=yes -o PreferredAuthentications=publickey -o PubkeyAuthentication=yes -o StrictHostKeyChecking=accept-new -o UserKnownHostsFile=/root/.ssh/known_hosts'
ssh_cmd() {  # ssh_cmd user@host "cmd"
  local host="$1"; shift
  eval ssh -i "\"$SSH_KEY\"" -p "\"$SSH_PORT\"" $SSH_OPTS "\"$host\"" "\"$@\""
}
scp_cmd() {  # scp_cmd æº ç›®æ ‡
  eval scp -i "\"$SSH_KEY\"" -P "\"$SSH_PORT\"" -o IdentitiesOnly=yes "\"$@\""
}

# æ—¥å¿—
log(){ mkdir -p "$LOG_DIR"; echo -e "$1" | tee -a "$INSTALL_LOG_FILE"; }
error_exit(){ log "${RED}é”™è¯¯: $1${NC}"; exit 1; }
show_title(){ echo -e "\n${BLUE}============================================================${NC}\n${CYAN}$1${NC}\n${BLUE}============================================================${NC}\n"; }

check_requirements(){
  [ "$EUID" -ne 0 ] && error_exit "è¯·ä½¿ç”¨ root æƒé™è¿è¡Œ"
  for cmd in curl ssh rsync tar git hostname jq bc; do
    command -v "$cmd" >/dev/null 2>&1 || { log "${YELLOW}å®‰è£… $cmd...${NC}"; apt-get update && apt-get install -y "$cmd" || error_exit "æ— æ³•å®‰è£… $cmd"; }
  done
  command -v pigz >/dev/null 2>&1 || apt-get install -y pigz >/dev/null 2>&1 || log "${YELLOW}pigz å®‰è£…å¤±è´¥ï¼Œå°†ä½¿ç”¨ gzip${NC}"
}

validate_config(){
  for p in BOT_TOKEN CHAT_ID TARGET_IP; do
    [ -z "${!p}" ] && error_exit "é…ç½®å‚æ•° $p ä¸èƒ½ä¸ºç©º"
  done
  [[ "$SSH_PORT" =~ ^[0-9]+$ ]] && [ "$SSH_PORT" -ge 1 ] && [ "$SSH_PORT" -le 65535 ] || error_exit "SSHç«¯å£æ— æ•ˆ: $SSH_PORT"
}

collect_config(){
  show_title "ç³»ç»Ÿå¿«ç…§å¤‡ä»½é…ç½®å‘å¯¼"
  log "${CYAN}â„¹ï¸ å°†åŠ è½½è„šæœ¬é¡¶éƒ¨çš„é¢„è®¾å€¼ä½œä¸ºé»˜è®¤é¡¹ï¼Œå¯ç›´æ¥å›è½¦ä½¿ç”¨ã€‚${NC}\n"

  log "${YELLOW}ğŸ“± Telegram é€šçŸ¥é…ç½®:${NC}"
  read -p "è¯·è¾“å…¥ Telegram Bot Token [å½“å‰: ${BOT_TOKEN:0:8}...]: " INPUT; BOT_TOKEN=${INPUT:-$BOT_TOKEN}
  while [ -z "$BOT_TOKEN" ]; do read -p "è¯·è¾“å…¥ Telegram Bot Token: " BOT_TOKEN; done
  read -p "è¯·è¾“å…¥ Telegram Chat ID [å½“å‰: $CHAT_ID]: " INPUT; CHAT_ID=${INPUT:-$CHAT_ID}
  while [ -z "$CHAT_ID" ]; do read -p "è¯·è¾“å…¥ Telegram Chat ID: " CHAT_ID; done; echo

  log "${YELLOW}ğŸŒ è¿œç¨‹æœåŠ¡å™¨é…ç½®:${NC}"
  read -p "è¯·è¾“å…¥è¿œç¨‹æœåŠ¡å™¨IPåœ°å€ [å½“å‰: $TARGET_IP]: " INPUT; TARGET_IP=${INPUT:-$TARGET_IP}
  while [ -z "$TARGET_IP" ]; do read -p "è¯·è¾“å…¥è¿œç¨‹æœåŠ¡å™¨IPåœ°å€: " TARGET_IP; done
  read -p "è¯·è¾“å…¥è¿œç¨‹æœåŠ¡å™¨ç”¨æˆ·å [é»˜è®¤: $TARGET_USER]: " INPUT; TARGET_USER=${INPUT:-$TARGET_USER}
  read -p "è¯·è¾“å…¥SSHç«¯å£ [é»˜è®¤: $SSH_PORT]: " INPUT; SSH_PORT=${INPUT:-$SSH_PORT}; echo

  log "${YELLOW}ğŸ“ è¿œç¨‹å­˜å‚¨é…ç½®:${NC}"
  read -p "è¯·è¾“å…¥è¿œç¨‹åŸºç¡€å¤‡ä»½ç›®å½• [é»˜è®¤: $TARGET_BASE_DIR]: " INPUT; TARGET_BASE_DIR=${INPUT:-$TARGET_BASE_DIR}

  HOSTNAME=$(hostname)
  if [ -z "$REMOTE_DIR_NAME" ]; then
    REMOTE_DIR_NAME="$HOSTNAME"
    log "\n${CYAN}â„¹ï¸ æœ¬æœºå°†åœ¨è¿œç¨‹åˆ›å»ºç›®å½•: $TARGET_BASE_DIR/$REMOTE_DIR_NAME${NC}"
    read -p "æ˜¯å¦ä½¿ç”¨æ­¤é»˜è®¤ç›®å½•å '$REMOTE_DIR_NAME'? [Y/n]: " USE_DEFAULT_HOSTNAME
    if [[ "$USE_DEFAULT_HOSTNAME" =~ ^[Nn]$ ]]; then
      read -p "è¯·è¾“å…¥è‡ªå®šä¹‰ç›®å½•å: " REMOTE_DIR_NAME; while [ -z "$REMOTE_DIR_NAME" ]; do read -p "ç›®å½•åä¸èƒ½ä¸ºç©ºï¼Œè¯·é‡æ–°è¾“å…¥: " REMOTE_DIR_NAME; done
    fi
  else
    log "\n${CYAN}â„¹ï¸ ä½¿ç”¨é¢„è®¾çš„è¿œç¨‹ç›®å½•å: $REMOTE_DIR_NAME${NC}"
  fi

  FULL_REMOTE_PATH="$TARGET_BASE_DIR/$REMOTE_DIR_NAME"
  log "${GREEN}âœ“ è¿œç¨‹å®Œæ•´è·¯å¾„: $FULL_REMOTE_PATH${NC}\n"

  log "${YELLOW}ğŸ’¾ æœ¬åœ°é…ç½®:${NC}"
  read -p "è¯·è¾“å…¥æœ¬åœ°å¤‡ä»½ç›®å½• [é»˜è®¤: $BACKUP_DIR]: " INPUT; BACKUP_DIR=${INPUT:-$BACKUP_DIR}

  log "\n${YELLOW}ğŸ—„ï¸ å¤‡ä»½ä¿ç•™ç­–ç•¥:${NC}"
  read -p "è¯·è¾“å…¥æœ¬åœ°ä¿ç•™å¿«ç…§æ•°é‡ [é»˜è®¤: $LOCAL_SNAPSHOT_KEEP]: " INPUT; LOCAL_SNAPSHOT_KEEP=${INPUT:-$LOCAL_SNAPSHOT_KEEP}
  read -p "è¯·è¾“å…¥è¿œç¨‹å¿«ç…§ä¿ç•™å¤©æ•° [é»˜è®¤: $REMOTE_SNAPSHOT_DAYS]: " INPUT; REMOTE_SNAPSHOT_DAYS=${INPUT:-$REMOTE_SNAPSHOT_DAYS}; echo

  log "${YELLOW}â° è‡ªåŠ¨æ‰§è¡Œé…ç½®:${NC}"
  read -p "è¯·è¾“å…¥å¤‡ä»½é—´éš”å¤©æ•° (1-30) [é»˜è®¤: $BACKUP_INTERVAL_DAYS]: " INPUT; BACKUP_INTERVAL_DAYS=${INPUT:-$BACKUP_INTERVAL_DAYS}
  while [[ ! "$BACKUP_INTERVAL_DAYS" =~ ^([1-9]|[12][0-9]|30)$ ]]; do read -p "è¯·è¾“å…¥1-30ä¹‹é—´çš„æ•°å­— [é»˜è®¤: 5]: " INPUT; BACKUP_INTERVAL_DAYS=${INPUT:-5}; done
  read -p "æ˜¯å¦éœ€è¦ç«‹å³æ‰§è¡Œä¸€æ¬¡å¿«ç…§æµ‹è¯•ï¼Ÿ[Y/n]: " INPUT; RUN_NOW=${INPUT:-$RUN_NOW}; echo

  validate_config

  show_title "é…ç½®é¢„è§ˆ"
  log "${CYAN}è¿œç¨‹æœåŠ¡å™¨:${NC} $TARGET_USER@$TARGET_IP:$SSH_PORT"
  log "${CYAN}è¿œç¨‹è·¯å¾„:${NC} $FULL_REMOTE_PATH"
  log "${CYAN}æœ¬åœ°è·¯å¾„:${NC} $BACKUP_DIR"
  log "${CYAN}ä¿ç•™ç­–ç•¥:${NC} æœ¬åœ°${LOCAL_SNAPSHOT_KEEP}ä¸ªï¼Œè¿œç¨‹${REMOTE_SNAPSHOT_DAYS}å¤©"
  log "${CYAN}è‡ªåŠ¨æ‰§è¡Œ:${NC} æ¯${BACKUP_INTERVAL_DAYS}å¤©ä¸€æ¬¡\n"

  read -p "ç¡®è®¤ä»¥ä¸Šé…ç½®å¹¶ç»§ç»­ï¼Ÿ[Y/n]: " CONFIRM_CONFIG
  [[ "$CONFIRM_CONFIG" =~ ^[Nn]$ ]] && { log "\n${YELLOW}é…ç½®å·²å–æ¶ˆï¼Œè¯·é‡æ–°è¿è¡Œè„šæœ¬è¿›è¡Œé…ç½®${NC}"; exit 0; }
}

setup_ssh_key(){
  show_title "SSHå¯†é’¥é…ç½® (Ed25519)"
  mkdir -p /root/.ssh; chmod 700 /root/.ssh
  if [ ! -f "$SSH_KEY" ]; then log "${YELLOW}ç”Ÿæˆæ–°çš„ Ed25519 SSH å¯†é’¥...${NC}"; ssh-keygen -t ed25519 -N "" -f "$SSH_KEY" -q; fi
  log "${YELLOW}è¯·å°†ä»¥ä¸‹å…¬é’¥æ·»åŠ åˆ°è¿œç¨‹æœåŠ¡å™¨ï¼š${NC}"
  echo -e "${GREEN}\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
  cat "${SSH_KEY}.pub"
  echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}\n"
  echo -e "${CYAN}OpenSSHï¼š~/.ssh/authorized_keys${NC}"
  echo -e "${CYAN}Dropbearï¼š/etc/dropbear/authorized_keys${NC}\n"
  read -p "å·²å°†å…¬é’¥æ·»åŠ åˆ°è¿œç¨‹æœåŠ¡å™¨ï¼Ÿç»§ç»­æµ‹è¯•è¿æ¥... [Y/n]: " SSH_OK
  if [[ ! "$SSH_OK" =~ ^[Nn]$ ]]; then
    log "${YELLOW}æµ‹è¯•SSHè¿æ¥...${NC}"
    if ssh_cmd "$TARGET_USER@$TARGET_IP" "echo 'SSHè¿æ¥æµ‹è¯•æˆåŠŸ'"; then
      log "${GREEN}âœ“ SSHè¿æ¥æµ‹è¯•æˆåŠŸï¼${NC}\n"
      log "${YELLOW}åˆ›å»ºè¿œç¨‹ç›®å½•ç»“æ„...${NC}"
      if ssh_cmd "$TARGET_USER@$TARGET_IP" "mkdir -p $FULL_REMOTE_PATH/system_snapshots $FULL_REMOTE_PATH/configs $FULL_REMOTE_PATH/logs"; then
        log "${GREEN}âœ“ è¿œç¨‹ç›®å½•åˆ›å»ºæˆåŠŸ: $FULL_REMOTE_PATH${NC}\n"
      else
        log "${YELLOW}âš  è¿œç¨‹ç›®å½•åˆ›å»ºå¯èƒ½å¤±è´¥ï¼Œè¯·æ‰‹åŠ¨æ£€æŸ¥${NC}\n"
      fi
    else
      log "${RED}âœ— SSHè¿æ¥å¤±è´¥ã€‚${NC}"
      echo -e "${YELLOW}å¸¸è§åŸå› ï¼š\n1) Dropbear æœªæ”¾å…¥ /etc/dropbear/authorized_keys\n2) ç«¯å£é”™è¯¯ï¼ˆå½“å‰: ${SSH_PORT}ï¼‰\n3) å…¬é’¥æƒé™/æ¢è¡Œç¬¦é—®é¢˜ï¼ˆç¡®ä¿æ—  CRLFï¼Œæƒé™ 600ï¼‰${NC}\n"
      read -p "ç»§ç»­å®‰è£…ï¼ˆå°†è·³è¿‡è¿œç¨‹å¤‡ä»½ï¼‰ï¼Ÿ[y/N]: " CONTINUE; [[ ! "$CONTINUE" =~ ^[Yy]$ ]] && exit 1
    fi
  fi
}

test_telegram(){
  show_title "Telegramé€šçŸ¥æµ‹è¯•"
  local msg="ğŸš€ ç³»ç»Ÿå¿«ç…§å¤‡ä»½å·¥å…·å®‰è£…æµ‹è¯•\næ—¶é—´: $(date '+%F %T')\nä¸»æœº: $(hostname)"
  local rendered=$(printf "%b" "$msg")
  response=$(curl -s "https://api.telegram.org/bot$BOT_TOKEN/sendMessage" \
    -d chat_id="$CHAT_ID" \
    --data-urlencode text="$rendered")
  if [[ $response == *"\"ok\":true"* ]]; then
    log "${GREEN}âœ“ Telegramé€šçŸ¥æµ‹è¯•æˆåŠŸï¼${NC}\n"
  else
    log "${RED}âœ— Telegramé€šçŸ¥å‘é€å¤±è´¥ï¼Œè¯·æ£€æŸ¥é…ç½®${NC}\n"
  fi
}


create_script(){
  show_title "åˆ›å»ºå¤‡ä»½è„šæœ¬"
  mkdir -p "$BACKUP_DIR" "$CONFIG_DIR" "$SCRIPT_DIR" "$LOG_DIR"

  log "${YELLOW}åˆ›å»ºé…ç½®æ–‡ä»¶...${NC}"
  cat > "$CONFIG_FILE" << EOF
#!/bin/bash
# é…ç½®æ–‡ä»¶ (è‡ªåŠ¨ç”Ÿæˆ: $(date '+%F %T'))

BOT_TOKEN="$BOT_TOKEN"
CHAT_ID="$CHAT_ID"

TARGET_IP="$TARGET_IP"
TARGET_USER="$TARGET_USER"
SSH_PORT="$SSH_PORT"
TARGET_BASE_DIR="$TARGET_BASE_DIR"
REMOTE_DIR_NAME="$REMOTE_DIR_NAME"

BACKUP_DIR="$BACKUP_DIR"
HOSTNAME=\$(hostname)

LOCAL_SNAPSHOT_KEEP=$LOCAL_SNAPSHOT_KEEP
REMOTE_SNAPSHOT_DAYS=$REMOTE_SNAPSHOT_DAYS
BACKUP_INTERVAL_DAYS=$BACKUP_INTERVAL_DAYS

DISK_SPACE_THRESHOLD="$DISK_SPACE_THRESHOLD"
MAX_RETRY_ATTEMPTS="$MAX_RETRY_ATTEMPTS"
LOAD_THRESHOLD_MULTIPLIER="$LOAD_THRESHOLD_MULTIPLIER"
MEMORY_THRESHOLD="$MEMORY_THRESHOLD"

LOG_FILE="$SNAPSHOT_LOG_FILE"
DEBUG_LOG="$DEBUG_LOG_FILE"
EOF

  log "${YELLOW}åˆ›å»ºä¸»å¤‡ä»½è„šæœ¬...${NC}"
  cat > "$SCRIPT_FILE" << 'EOF'
#!/bin/bash
source "/etc/system_snapshot/config.conf" || { echo "é…ç½®æ–‡ä»¶æœªæ‰¾åˆ°"; exit 1; }

SSH_KEY="/root/.ssh/id_ed25519"
SSH_OPTS='-o IdentitiesOnly=yes -o PreferredAuthentications=publickey -o PubkeyAuthentication=yes -o StrictHostKeyChecking=accept-new -o UserKnownHostsFile=/root/.ssh/known_hosts'
ssh_cmd(){ local host="$1"; shift; eval ssh -i "\"$SSH_KEY\"" -p "\"$SSH_PORT\"" $SSH_OPTS "\"$host\"" "\"$@\""; }

TIMESTAMP=$(date +"%Y%m%d%H%M%S")
SNAPSHOT_FILE="$BACKUP_DIR/system_snapshot_${TIMESTAMP}.tar.gz"
LOCK_FILE="/tmp/system_snapshot.lock"

exec 200>"$LOCK_FILE"; if ! flock -n 200; then echo "è„šæœ¬å·²åœ¨è¿è¡Œ"; exit 1; fi
echo $$ >&200; trap 'flock -u 200' EXIT

log_info(){ echo "$(date '+%F %T') [INFO] $1" | tee -a "$LOG_FILE"; }
log_error(){ echo "$(date '+%F %T') [ERROR] $1" | tee -a "$LOG_FILE"; }

# Telegram å‘é€ï¼ˆæŠŠ \n æ¸²æŸ“ä¸ºæ¢è¡Œï¼‰
send_tg(){
  [ -z "$BOT_TOKEN" ] || [ -z "$CHAT_ID" ] && return 0
  local rendered; rendered=$(printf "%b" "$1")
  curl -sS -m 15 "https://api.telegram.org/bot$BOT_TOKEN/sendMessage" \
    -d chat_id="$CHAT_ID" --data-urlencode text="$rendered" >/dev/null 2>&1 || true
}

retry_command(){ local max="${MAX_RETRY_ATTEMPTS:-3}" a=1; while [ $a -le $max ]; do eval "$@" && return 0; log_info "å‘½ä»¤å¤±è´¥ï¼Œç¬¬ $a æ¬¡é‡è¯•..."; sleep $((a*3)); a=$((a+1)); done; return 1; }

format_bytes(){ local b="$1"; [[ "$b" =~ [eE] ]] && b=$(awk '{printf "%.0f",$1}' <<<"$b"); [[ "$b" =~ ^[0-9]+$ ]] || { echo 0B; return; }
  if [ "$b" -ge 1073741824 ]; then echo "$((b/1073741824)).$(((b%1073741824)*10/1073741824))GB";
  elif [ "$b" -ge 1048576 ]; then echo "$((b/1048576)).$(((b%1048576)*10/1048576))MB";
  elif [ "$b" -ge 1024 ]; then echo "$((b/1024)).$(((b%1024)*10/1024))KB"; else echo "${b}B"; fi; }

check_disk_space(){ local info=$(df "$BACKUP_DIR" 2>/dev/null | tail -n1); [ -z "$info" ] && { log_error "æ— æ³•è·å–ç£ç›˜ä¿¡æ¯"; return 1; }
  local u=$(awk '{print $5}' <<<"$info" | tr -d '%'); [[ "$u" =~ ^[0-9]+$ ]] || { log_error "æ— æ³•è§£æç£ç›˜ä½¿ç”¨ç‡"; return 1; }
  if [ "$u" -gt "${DISK_SPACE_THRESHOLD:-85}" ]; then log_error "ç£ç›˜ç©ºé—´ä¸è¶³: ${u}% > ${DISK_SPACE_THRESHOLD}%";
    send_tg "âŒ å¤‡ä»½å¤±è´¥ï¼ˆç©ºé—´ä¸è¶³ï¼‰\nç£ç›˜ä½¿ç”¨ç‡: ${u}% > ${DISK_SPACE_THRESHOLD}%\næ—¶é—´: $(date '+%F %T')"; return 1; fi; }

# è¿œç«¯ free å­—èŠ‚
remote_free_bytes(){ local p="$1"; ssh_cmd "$TARGET_USER@$TARGET_IP" "df -P \"${p%/}\" | awk 'NR==2{print \$4*1024}'" 2>/dev/null | tr -d '\r'; }
remote_mkdir(){ local d="$1"; ssh_cmd "$TARGET_USER@$TARGET_IP" "mkdir -p \"${d%/}\"" >/dev/null 2>&1 || true; }

# è¿œç«¯è·¯å¾„è‡ªåŠ¨é€‰æ‹©ï¼šä¼˜å…ˆ /mnt/wd/Remote_backupï¼Œå…¶æ¬¡é…ç½®çš„ TARGET_BASE_DIR
pick_base_dir(){
  local candidates=("/mnt/wd/Remote_backup" "$TARGET_BASE_DIR")
  local need=$(( $(du -b "$SNAPSHOT_FILE" | cut -f1) + 200*1024*1024 ))
  for base in "${candidates[@]}"; do
    remote_mkdir "$base"
    local free="$(remote_free_bytes "$base")"
    if [ -n "$free" ] && [ "$free" -ge "$need" ]; then echo "$base"; return 0; fi
  done
  echo "$TARGET_BASE_DIR"
}

create_snapshot(){
  local start=$(date +%s)
  send_tg "ğŸ”„ å¼€å§‹åˆ›å»ºç³»ç»Ÿå¿«ç…§\nä¸»æœº: $(hostname)\næ—¶é—´: $(date '+%F %T')\nä¿å­˜ç›®å½•: $BACKUP_DIR"
  log_info "å¼€å§‹åˆ›å»ºç³»ç»Ÿå¿«ç…§..."
  check_disk_space || return 1

  local compress="gzip"; command -v pigz >/dev/null && { compress="pigz"; log_info "ä½¿ç”¨ pigz å¤šçº¿ç¨‹å‹ç¼©"; }
  cd / && tar -cf - \
    --exclude="dev/*" --exclude="proc/*" --exclude="sys/*" --exclude="tmp/*" \
    --exclude="run/*" --exclude="mnt/*" --exclude="media/*" --exclude="lost+found" \
    --exclude="var/cache/*" --exclude="var/tmp/*" --exclude="var/log/*" \
    --exclude="var/lib/apt/lists/*" --exclude="var/lib/docker/*" \
    --exclude="$BACKUP_DIR/*" --exclude="*.log" --exclude="*.tmp" \
    --exclude="swap*" --exclude="core" --exclude=".cache/*" \
    --warning=no-file-changed \
    etc usr var root home opt 2>/tmp/snapshot_error.log | $compress > "$SNAPSHOT_FILE"

  if [ ! -s "$SNAPSHOT_FILE" ]; then local err=$(cat /tmp/snapshot_error.log 2>/dev/null || echo "æœªçŸ¥é”™è¯¯")
    log_error "å¿«ç…§åˆ›å»ºå¤±è´¥: $err"; send_tg "âŒ å¿«ç…§åˆ›å»ºå¤±è´¥\né”™è¯¯: $err\næ—¶é—´: $(date '+%F %T')"; return 1; fi

  local end=$(date +%s) dur=$((end-start)) size=$(du -h "$SNAPSHOT_FILE" | cut -f1)
  log_info "å¿«ç…§åˆ›å»ºæˆåŠŸ: $SNAPSHOT_FILE ($size, è€—æ—¶: ${dur}s)"
  send_tg "ğŸ“¸ å¿«ç…§åˆ›å»ºæˆåŠŸ\næ–‡ä»¶: $(basename "$SNAPSHOT_FILE")\nå¤§å°: $size\nè€—æ—¶: ${dur}s"
}

cleanup_local(){ log_info "æ¸…ç†æœ¬åœ°æ—§å¿«ç…§..."; find "$BACKUP_DIR" -maxdepth 1 -type f -name "system_snapshot_*.tar.gz" | sort -r | tail -n +$((LOCAL_SNAPSHOT_KEEP+1)) | xargs -r rm -f; }

upload_snapshot(){
  local SNAP_BYTES=$(du -b "$SNAPSHOT_FILE" | cut -f1)
  local SNAP_HUMAN=$(du -h "$SNAPSHOT_FILE" | cut -f1)
  local SNAP_NAME=$(basename "$SNAPSHOT_FILE")
  local BASE_DIR=$(pick_base_dir)
  local FULL_REMOTE_PATH="$BASE_DIR/$REMOTE_DIR_NAME"

  send_tg "â¬†ï¸ å¼€å§‹ä¸Šä¼ åˆ°è¿œç¨‹\næœåŠ¡å™¨: $TARGET_USER@$TARGET_IP:$SSH_PORT\nç›®æ ‡ç›®å½•: $FULL_REMOTE_PATH/system_snapshots\næ–‡ä»¶: $SNAP_NAME\nå¤§å°: $SNAP_HUMAN"

  if ! retry_command "ssh_cmd '$TARGET_USER@$TARGET_IP' 'echo ok' >/dev/null"; then
    log_error "æ— æ³•è¿æ¥åˆ°è¿œç¨‹æœåŠ¡å™¨"; send_tg "âš ï¸ è¿œç¨‹ä¸Šä¼ å¤±è´¥\nåŸå› : æ— æ³•è¿æ¥ $TARGET_USER@$TARGET_IP:$SSH_PORT"; return 1; fi

  remote_mkdir "$FULL_REMOTE_PATH/system_snapshots"

  local FREE_BEFORE="$(remote_free_bytes "$BASE_DIR")"
  local NEED=$((SNAP_BYTES + 200*1024*1024))
  if [ -n "$FREE_BEFORE" ] && [ "$FREE_BEFORE" -lt "$NEED" ]; then
    log_error "è¿œç«¯ç©ºé—´ä¸è¶³ï¼šéœ€è¦ $(format_bytes $NEED)ï¼Œå¯ç”¨ $(format_bytes $FREE_BEFORE)"
    send_tg "âŒ ç©ºé—´ä¸è¶³ï¼Œå–æ¶ˆä¸Šä¼ \néœ€è¦: $(format_bytes $NEED)\nå¯ç”¨: $(format_bytes $FREE_BEFORE)\nç›®å½•: $BASE_DIR"
    return 1
  fi

  local start=$(date +%s) used=""; local ok=0
  if ssh_cmd "$TARGET_USER@$TARGET_IP" "command -v rsync >/dev/null 2>&1"; then
    if retry_command "rsync -avz --info=stats2,progress2 --timeout=300 -e \"ssh -i '$SSH_KEY' -p '$SSH_PORT' $SSH_OPTS\" \"$SNAPSHOT_FILE\" \"$TARGET_USER@$TARGET_IP:$FULL_REMOTE_PATH/system_snapshots/\""; then ok=1; used="rsync"; fi
  fi
  if [ "$ok" -ne 1 ]; then
    used="scp"
    retry_command "scp -i '$SSH_KEY' -P '$SSH_PORT' -o IdentitiesOnly=yes \"$SNAPSHOT_FILE\" \"$TARGET_USER@$TARGET_IP:$FULL_REMOTE_PATH/system_snapshots/\"" || { send_tg "âŒ è¿œç¨‹ä¸Šä¼ å¤±è´¥ï¼ˆrsyncâ†’scp å‡å¤±è´¥ï¼‰\næ–‡ä»¶: $SNAP_NAME"; return 1; }
  fi

  local end=$(date +%s) dur=$((end-start))
  local spd="N/A"; [ "$dur" -gt 0 ] && spd="$(format_bytes $((SNAP_BYTES/dur)))/s"
  local FREE_AFTER="$(remote_free_bytes "$BASE_DIR")"

  log_info "å¿«ç…§ä¸Šä¼ æˆåŠŸ (ç”¨æ—¶: ${dur}s, é€Ÿåº¦: ${spd}, æ–¹å¼: ${used})"
  send_tg "âœ… ä¸Šä¼ æˆåŠŸï¼ˆ${used}ï¼‰\næ–‡ä»¶: $SNAP_NAME\nç”¨æ—¶: ${dur}s\nå¹³å‡é€Ÿåº¦: ${spd}\nç›®æ ‡: $FULL_REMOTE_PATH/system_snapshots\nä¸Šä¼ åå¯ç”¨: $(format_bytes ${FREE_AFTER:-0})"

  # BusyBox å…¼å®¹æ¸…ç†ï¼ˆåˆ é™¤è¶…è¿‡ä¿ç•™å¤©æ•°çš„å¿«ç…§ï¼‰
  ssh_cmd "$TARGET_USER@$TARGET_IP" "find '$FULL_REMOTE_PATH/system_snapshots' -type f -name '*.tar.gz' -mtime +$REMOTE_SNAPSHOT_DAYS -exec rm -f {} \;"
  send_tg "ğŸ§¹ å·²æ‰§è¡Œè¿œç¨‹æ¸…ç†ï¼ˆ>$REMOTE_SNAPSHOT_DAYS å¤©ï¼‰\nç›®å½•: $FULL_REMOTE_PATH/system_snapshots"
}

setup_systemd_timer(){
  local svc="/etc/systemd/system/system-snapshot.service"
  local tim="/etc/systemd/system/system-snapshot.timer"
  [ -f "$tim" ] && systemctl stop system-snapshot.timer 2>/dev/null || true
  cat > "$svc" << EOFS
[Unit]
Description=System Snapshot Backup Service
After=network.target
[Service]
Type=oneshot
ExecStart=$(realpath "$0")
Environment="SYSTEMD_TIMER=1"
WorkingDirectory=/root
[Install]
WantedBy=multi-user.target
EOFS
  cat > "$tim" << EOFT
[Unit]
Description=Run System Snapshot Every $BACKUP_INTERVAL_DAYS Days
[Timer]
OnActiveSec=1h
OnUnitActiveSec=${BACKUP_INTERVAL_DAYS}d
RandomizedDelaySec=2h
Persistent=true
[Install]
WantedBy=timers.target
EOFT
  systemctl daemon-reload
  systemctl enable system-snapshot.timer
  systemctl start system-snapshot.timer
  local next=$(date -d "@$(( $(date +%s)+3600 ))" '+%Yå¹´%mæœˆ%dæ—¥ %H:%M (CST)')
  log_info "å®šæ—¶å™¨å·²è®¾ç½®: 1å°æ—¶åé¦–æ¬¡è¿è¡Œï¼Œä¹‹åæ¯${BACKUP_INTERVAL_DAYS}å¤©æ‰§è¡Œä¸€æ¬¡"
  log_info "è®¡ç®—å¾—å‡ºçš„ä¸‹æ¬¡è¿è¡Œæ—¶é—´: $next"
  send_tg "â° å®šæ—¶ä»»åŠ¡æ›´æ–°\né¦–æ¬¡: 1å°æ—¶å\né¢‘ç‡: æ¯${BACKUP_INTERVAL_DAYS}å¤©\nä¸‹æ¬¡è¿è¡Œ: $next"
}

[ -z "$SYSTEMD_TIMER" ] && setup_systemd_timer
create_snapshot && cleanup_local && upload_snapshot
log_info "ç³»ç»Ÿå¿«ç…§æ“ä½œå…¨éƒ¨å®Œæˆ"

TOTAL_LOCAL_SNAPSHOTS=$(find "$BACKUP_DIR" -maxdepth 1 -type f -name "system_snapshot_*.tar.gz" | wc -l)
TOTAL_LOCAL_SIZE_BYTES=$(find "$BACKUP_DIR" -maxdepth 1 -type f -name "system_snapshot_*.tar.gz" -exec du -b {} + 2>/dev/null | awk '{s+=$1} END{print s+0}')
TOTAL_LOCAL_SIZE=$(format_bytes "${TOTAL_LOCAL_SIZE_BYTES:-0}")
log_info "æœ¬åœ°å¿«ç…§æ•°é‡: ${TOTAL_LOCAL_SNAPSHOTS} ä¸ª, æ€»å¤§å°: ${TOTAL_LOCAL_SIZE}"
send_tg "âœ… ä»»åŠ¡å®Œæˆ | $(hostname)\næœ¬åœ°å¿«ç…§: ${TOTAL_LOCAL_SNAPSHOTS} ä¸ª\næœ¬åœ°æ€»å¤§å°: ${TOTAL_LOCAL_SIZE}\næ—¶é—´: $(date '+%F %T')"
EOF

  chmod +x "$SCRIPT_FILE"
  chmod 600 "$CONFIG_FILE"
  log "${GREEN}âœ“ è„šæœ¬åˆ›å»ºå®Œæˆï¼${NC}\n"
}

